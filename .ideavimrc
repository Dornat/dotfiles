"-----global stuff-----
let mapleader=","

"-----mappings-----
inoremap kj <Esc>
inoremap <C-f> <right>
inoremap <C-b> <left>

nnoremap <A-h> :action VimWindowLeft<cr>
nnoremap <A-l> :action VimWindowRight<cr>
nnoremap <A-v> :action VimWindowSplitVertical<cr>
nnoremap <A-c> :action CloseContent<cr>
nnoremap <A-r> :action ReopenClosedTab<cr>
nnoremap <A-n> :action VimMotionNextTab<cr>
nnoremap <A-p> :action VimMotionPreviousTab<cr>

nnoremap J 5<C-d>
nnoremap K 5<C-u>
nnoremap <C-f> 10zl
nnoremap <C-b> 10zh
nnoremap <C-k> J

nnoremap <leader>f :action GotoFile<cr>
nnoremap <leader>c :action GotoClass<cr>
nnoremap <leader>s :action GotoSymbol<cr>
nnoremap <leader>u :action FindUsages<cr>

nnoremap <c-j> :action SwitchDown<cr>

"-----debug specific-----
nnoremap <leader>b :action ToggleLineBreakpoint<cr>
nnoremap <leader>r :action RunToCursor<cr>

